# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# Documentation
*.md text eol=lf
*.mdx text eol=lf
*.txt text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.config.* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.npmrc text eol=lf
.nvmrc text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Lock files (binary)
package-lock.json binary
bun.lockb binary
yarn.lock binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
*.webp binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary

# Other binary files
*.pdf binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# GitHub specific
.github/** text eol=lf

# Linguist overrides (for language statistics)
*.skip.ts linguist-generated=true
*.skip.js linguist-generated=true
test/** linguist-documentation
docs/** linguist-documentation
website/** linguist-documentation
*.md linguist-documentation
